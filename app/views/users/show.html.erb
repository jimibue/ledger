<h1><%= @user.username %></h1>
<h5>
  <%= link_to 'Edit', edit_user_path(params[:id]) %>
  <%= link_to 'Destroy', user_path(params[:id]), method: :delete %>
</h5>
<%= image_tag @user.gravatar_url %>
<% if @posts.any? %>
  <% @posts.each do |post| %>
    <p>
      <%= link_to post.ledge, post_path(post.id)%>| |
      <%= link_to 'edit', edit_post_path(post.id) %>| |
      <%= link_to 'Destroy', post_path(post.id), method: :delete %>
    </p>
  <% end %>
<% else %>
  <p>no posts</p>
<% end %>
<%= link_to 'new post', new_post_path(user_id: @user.id) %>
